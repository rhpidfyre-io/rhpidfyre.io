<script is:inline>
const header = document.getElementById("header-nav")
if (!header)
	throw new Error("header element is: " + header)

window.addEventListener("scroll", () => {
	if (window.scrollY > 50)
		header.classList.add("scroll")
	else
		header.classList.remove("scroll")
})
</script>
