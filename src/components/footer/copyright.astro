---
import ButtonImg from "../button/img.astro"
import ThemeSelector from "./theme.astro"
---

<footer class="copyright-section">
	<section class="logos">
		<div class="footer-logo"></div>
		<ButtonImg
			text={Astro.generator}
			alt={Astro.generator}
			href="https://astro.build/"
			target="_blank"
			image="/footer/astro.webp"
			img_height="20px"
			height="40px"
			color="transparent"/>
	</section>
	<ThemeSelector/>
	<a href="https://raw.githubusercontent.com/rhpidfyre-io/rhpidfyre.io/refs/heads/master/LICENSE" class="copyright">&copy; 2025 rhpidfyre.io</a>
</footer>

<style>
	.copyright-section {
		display: flex;
		justify-content: space-between;
		align-items: center;

		.copyright {
			font-size: .9rem;
			text-align: center;
			color: var(--text-color-trinary);
			text-decoration: none;
		}
	}
	.logos {
		display: flex;
		align-items: center;
		gap: 10px;
	}
	.footer-logo {
		background-image: url("/logo.webp");
		background-size: cover;
		height: 40px;
		width: 40px;
		border: 1.5px solid var(--header-border-color);
		border-radius: 10px;
	}
</style>