---
import Button from "../../button/init.astro"

interface Props {
	text: string,
}
const {text} = Astro.props
---

<footer>
	<Button
		text={text}
		href="/projects/"
		width="100%"
		height="30px"
		background_color="hsl(0,0%,80%)"
		color="black"/>
</footer>

<style>
	footer {
		display: flex;
		justify-content: center;
	}
</style>