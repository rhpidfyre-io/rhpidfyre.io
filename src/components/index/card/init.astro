---
import CardButton from "./button.astro"
import CardSection, { CardSectionSvg } from "./section.astro"
---

<div>
	<CardSection title="Web Developer" svg={CardSectionSvg.Web}/>
	<CardButton text="Web Projects &rarr;"/>
</div>
<div>
	<CardSection title="Software Developer" svg={CardSectionSvg.Software}/>
	<CardButton text="Software Projects &rarr;"/>
</div>
<div>
	<CardSection title="Cloud & Servers" svg={CardSectionSvg.Cloud}/>
	<CardButton text="Services &rarr;"/>
</div>

<style>
	div {
		--frame-border: 1.5px solid var(--footer-border-color);

		display: grid;
		align-items: center;
		gap: 25px;
		background-color: var(--frame-background-color);
		padding: 30px 45px 30px 45px;
		box-shadow: 8px 8px 2px 1px var(--element-shadow-color);

		&:is(:first-child, :last-child) {
			border-bottom: var(--frame-border);
			border-top: var(--frame-border);
		}
		&:first-child {
			border-top-left-radius: 10px;
			border-bottom-left-radius: 10px;
			border-left: var(--frame-border);
		}
		&:last-child {
			border-top-right-radius: 10px;
			border-bottom-right-radius: 10px;
			border-right: var(--frame-border);
		}
		&:nth-child(2) {
			border: var(--frame-border);
		}
	}
</style>