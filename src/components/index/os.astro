<style>
	.rhpidfyre-os {
		display: grid;
		justify-content: center;
		width: 100vw;
		gap: 10px;
		padding: 300px 0 300px 0;
		position: relative;
	}

	div {
		display: flex;
		justify-content: center;
		gap: 20px;
	}
	h1, h2 {
		margin: 0;
		text-align: center;
	}
	h1 {
		font-size: 2rem;
		margin-bottom: 10px;
	}
	h2 {
		font-size: 1.2rem;
		margin-top: 10px;
	}
	a {
		color: var(--text-color-secondary);

		&:is(:hover, :focus) {
			color: var(--text-color);
		}
	}
	i {
		font-size: 1.1rem;
		text-align: center;
		margin-bottom: 30px;
		color: var(--text-color-trinary)
	}
	pre {
		display: flex;
		justify-content: center;
		font-weight: bold;
		font-size: 1.2rem;
		z-index: -1;
        letter-spacing: 1px;
        top: 13%;
        left: 0;
        right: 0;
		color: rgb(20,20,20);
		pointer-events: none;
		user-select: none;
		white-space: pre;
		position: absolute;
	}
</style>