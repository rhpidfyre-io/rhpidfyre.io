---
import { PageName } from "../navigation"
import Meta from "../components/meta.astro"
import Header from "../components/header/init.astro"
import Footer from "../components/footer/init.astro"

interface Props {
	current: PageName,
}
const {current} = Astro.props

function page_name(): string {
	switch(current) {
		case PageName.Contact:
			return " | Contact"
		case PageName.Blog:
			return " | Blog"
		default:
			return ""
	}
}
---

<html lang="en">
	<head>
		<Meta/>
		<link rel="icon" type="image/webp" href="/logo.webp"/>
		<title>{"rhpidfyre.io" + page_name()}</title>
	</head>
	<body>
		<Header current={current}/>
		<slot/>
		<Footer/>
	</body>
</html>

<style lang="scss" is:global>
	@use "./variables.scss";

	:root {
		@include variables.css-root;

		color-scheme: dark;
	}
	::selection {
		background-color: var(--selection-background-color);
		color: var(--selection-color);
		-webkit-text-fill-color: var(--selection-color);
	}
	body {
		font-family: -apple-system, "Segoe UI", system-ui, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Twemoji Mozilla";
		box-sizing: border-box;
		margin: 0;
		background-color: var(--background-color);
		overflow-x: hidden;
	}
	h1, p {
		color: var(--text-color);
	}
	h2 {
		font-weight: normal;
		color: var(--text-color-secondary);
	}
	a {
		color: var(--text-color);

		&:hover {
			cursor: pointer;
		}
		&:is(:active, :visited) {
			color: var(--text-color)
		}
	}
	button:hover {
		cursor: pointer;
	}
</style>