---
import Meta from "../components/meta.astro"
import Header, {ActivePage} from "../components/header/init.astro"
import Footer from "../components/footer.astro"

interface Props {
	name?: string,
	current: ActivePage
}
const {name, current} = Astro.props
---

<html lang="en">
	<head>
		<Meta/>
		<link rel="icon" type="image/webp" href="/logo.webp"/>
		<title>{"rhpidfyre.io" + (name ? " | " + name : "")}</title>
	</head>
	<body>
		<Header current={current}/>
		<slot/>
		<Footer/>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;

		--text-color: #c8c8c8;
		--background-color: black;
		--footer-color: #050505;
		--footer-border-color: #1e1e1e;
		--header-color: #0a0a0a;
		--header-border-color: var(--footer-border-color);
		--header-border-color-hover: #282828;
		--header-button-color: #141414;
		--header-button-color-hover: var(--header-border-color);
		--button-svg-inactive-color: var(--header-border-color-hover);
	}
	::selection {
		background-color: #c8c8c8;
		color: black;
	}
	body {
		font-family: -apple-system, "Segoe UI", system-ui, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Twemoji Mozilla";
		box-sizing: border-box;
		margin: 0;
		background-color: var(--background-color);
		overflow: hidden;
	}
	h1, h2, p {
		color: var(--text-color)
	}
</style>